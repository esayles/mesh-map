# MQTT and service configuration - copy to `.env` and edit values.
# Values can also be provided as Cloudflare Pages environment variables.

# MQTT broker
MQTT_HOST=
MQTT_PORT=443
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC=meshcore/BDL/+/packets

# Service (Cloudflare Pages) host
SERVICE_HOST=https://your-pages-app.pages.dev

# Map region center (JSON array or comma-separated lat,lon)
CENTER_POSITION=[41.613889,-72.7725]

# Radius (miles) considered "in" the region
VALID_DIST=67

# Mesh channel info (hex hash + hex secret)
CHANNEL_HASH=e0
CHANNEL_SECRET=4076c315c1ef385fa93f066027320fe5

# Authoritative observers - JSON array or comma-separated list
# Example: ["K1HFZ Base 2","KO4TSM MQTT Upload","üêå base"]
WATCHED_OBSERVERS=["K1HFZ Base 2","KO4TSM MQTT Upload","üêå base"]
